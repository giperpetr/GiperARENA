{
  "name": "@giperarena/backend",
  "version": "0.1.0",
  "description": "GiperARENA Backend API Server",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate:create": "goose -dir migrations create",
    "migrate:up": "goose -dir migrations postgres \"$DATABASE_URL\" up",
    "migrate:down": "goose -dir migrations postgres \"$DATABASE_URL\" down",
    "migrate:status": "goose -dir migrations postgres \"$DATABASE_URL\" status",
    "migrate:reset": "goose -dir migrations postgres \"$DATABASE_URL\" reset"
  },
  "keywords": [
    "giperarena",
    "backend",
    "api"
  ],
  "author": "GiperARENA Team",
  "license": "MIT",
  "dependencies": {
    "@giperarena/shared": "workspace:*",
    "@supabase/supabase-js": "^2.39.0",
    "aws-sdk": "^2.1505.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
