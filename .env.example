# ============================================
# ArenaHUB Environment Variables
# ============================================

# ============================================
# DOMAIN CONFIGURATION
# ============================================
MAIN_DOMAIN=your-domain.com
SERVER_IP=your-server-ip

# ============================================
# SUPABASE (EXISTING INFRASTRUCTURE)
# ============================================
# Get these from your existing Supabase stack .env
POSTGRES_DB=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_USER=postgres.arenahub
POSTGRES_PORT=5432

ANON_KEY=your-supabase-anon-key
SERVICE_ROLE_KEY=your-supabase-service-role-key
JWT_SECRET=your-jwt-secret
JWT_EXPIRY=3600

# ============================================
# REDIS (EXISTING INFRASTRUCTURE)
# ============================================
REDIS_PASSWORD=your-redis-password

# ============================================
# MINIO/S3 (EXISTING INFRASTRUCTURE)
# ============================================
MINIO_ROOT_USER=supa-storage
MINIO_ROOT_PASSWORD=secret1234

# ============================================
# SOLANA BLOCKCHAIN
# ============================================
# Mainnet
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Devnet (for development)
# SOLANA_RPC_URL=https://api.devnet.solana.com
# SOLANA_WS_URL=wss://api.devnet.solana.com

# Or use QuickNode/Helius for better performance
# SOLANA_RPC_URL=https://your-quicknode-endpoint.com
# SOLANA_WS_URL=wss://your-quicknode-endpoint.com

# Program IDs (will be set after deployment)
GAC_TOKEN_PROGRAM_ID=
PAC_TOKEN_PROGRAM_ID=
ESCROW_PROGRAM_ID=
STAKING_PROGRAM_ID=
NFT_PROGRAM_ID=
DAO_PROGRAM_ID=
BETTING_PROGRAM_ID=

# ============================================
# APPLICATION SECRETS
# ============================================
# Generate with: openssl rand -base64 32
API_SECRET_KEY=your-api-secret-key
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-encryption-key

# ============================================
# OAUTH PROVIDERS (Optional)
# ============================================
# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Twitter/X
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Discord
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# ============================================
# EMAIL (n8n handles this via existing SMTP)
# ============================================
# These are just for reference - n8n handles actual sending
SMTP_FROM=noreply@your-domain.com
SMTP_REPLY_TO=support@your-domain.com

# ============================================
# KYC/VERIFICATION (Optional for betting)
# ============================================
SUMSUB_APP_TOKEN=
SUMSUB_SECRET_KEY=
SUMSUB_WEBHOOK_SECRET=

# ============================================
# PAYMENT PROCESSING (Optional)
# ============================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# EXTERNAL APIs (Optional)
# ============================================
# AI Services (for moderation, support)
OPENAI_API_KEY=

# SMS Provider (for 2FA)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Log level
LOG_LEVEL=info

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_BETTING=true
ENABLE_TOURNAMENTS=true
ENABLE_NFT_MARKETPLACE=true
ENABLE_STAKING=true
ENABLE_DAO=true

# ============================================
# DEVELOPMENT ONLY
# ============================================
NODE_ENV=production
# Set to 'development' for local dev

# Enable debug mode
DEBUG=false

# Hot reload
WATCH_MODE=false
